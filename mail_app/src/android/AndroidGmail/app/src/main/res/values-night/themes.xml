<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.AndroidGmail" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Override the purple -->
        <item name="colorPrimary">@color/my_primary</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/my_secondary</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- This removes purple from surfaces/backgrounds -->
        <item name="colorPrimaryContainer">@color/my_primary</item>
        <item name="colorSecondaryContainer">@color/my_secondary</item>

        <!-- Optional: Background tint -->
        <item name="colorSurface">@color/black</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="android:colorBackground">@color/black</item>
    </style>

    <!-- Same styles from light mode -->
    <style name="Theme.AndroidGmail" parent="Base.Theme.AndroidGmail" />
    <style name="Theme.AndroidGmail.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.AndroidGmail.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.AndroidGmail.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
